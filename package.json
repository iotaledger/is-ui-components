{
    "name": "@iota/is-ui-components",
    "type": "module",
    "version": "0.0.44",
    "description": "Svelte UI components for IOTA Integration Services",
    "scripts": {
        "dev": "svelte-kit dev --port ${PORT:-3000}",
        "build": "svelte-kit build",
        "package": "svelte-kit package",
        "build-css": "sass src/lib/scss/index.scss:src/lib/css/index.css",
        "dist": "run-s build-css package",
        "preview": "svelte-kit preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iotaledger/is-ui-components.git"
    },
    "keywords": [
        "integration-services",
        "audit-log",
        "audit-trail-gw",
        "ui",
        "ux",
        "svelte",
        "sveltekit",
        "iota",
        "iota-streams"
    ],
    "author": "Begoña Álvarez <balvarez@boxfish.studio>",
    "dependencies": {
        "@iota/is-client": "^0.1.9",
        "@iota/is-shared-modules": "^0.1.5",
        "bootstrap": "^5.1.3",
        "svelte-file-dropzone": "^1.0.0-dev.1",
        "sveltestrap": "^5.7.0"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "next",
        "@sveltejs/kit": "next",
        "@types/node": "^17.0.12",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-svelte3": "^3.2.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.4.1",
        "prettier-plugin-svelte": "^2.4.0",
        "sass": "^1.49.0",
        "svelte": "^3.44.0",
        "svelte-check": "^2.2.6",
        "svelte-preprocess": "^4.9.4",
        "svelte2tsx": "^0.5.3",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3"
    }
}
